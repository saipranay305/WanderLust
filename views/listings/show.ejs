<% layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3> <%=listing.title%></h3>
        </div>
        <div class="card col-6 offset-3 show-padding listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">

            <div class="card-body">
                <p class="card-text">
                    <p>Owned by <i><%=listing.owner.username%></i><br/></p>
                    <p><%=listing.description%><br></p>
                        <p>&#8377;<%= listing.price?listing.price.toLocaleString("en-IN"):"Price is null"%><br></p>
                            <p><%=listing.location%><br></p>
                              <p><%=listing.country%><br></p>
                </p>
            </div>
        </div>
        <% if(currentUser && currentUser._id.equals(listing.owner._id)){%>
        <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%=listing._id%>/?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
        </div>
        <%}%>

        <br>
        <hr/>
        
        <div   class="col-8 offset-3 mt-3 mb-3">
            <%if(currentUser){%>}
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%=listing.id%>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label" >Rating</label>
                    <input type="range" name="review[rating]" id="rating"  min="1" max="5" class="form-range" >
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" class="form-control" cols="30" rows="3" required></textarea>
                    <div class="invalid-feedback">
                        Please provide a comment.
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-dark mt-2">Submit</button>
            </form>
                  <%}%>
        </div>
      
        
        <hr/>

    <p><b>All Reviews</b></p>
        <div class="row">
         <%for(review of listing.reviews){%>
            <div class="card col-5 offset-3 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">@<%=review.author.username%></h5>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text"><%=review.rating%></p>
                </div >
                <form class=mb-3 method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-dark col-2 offset-10 mb-2">Delete</button>
                </form>

            </div>
            <%}%>
        </div>
    </div>